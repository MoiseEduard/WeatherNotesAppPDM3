<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherNotesApp.Views.UpdateNotesPage"
             xmlns:local="clr-namespace:WeatherNotesApp.Views"
             Title="Actualizare Notițe">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Actualizează notițele adăugate manual"
               FontAttributes="Bold"
               FontSize="20"
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding EditableNotes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5"
                           Padding="10"
                           BackgroundColor="#f4faff"
                           BorderColor="#cce0ff"
                           CornerRadius="10"
                           >
                        <VerticalStackLayout Spacing="10">
                            <Entry Text="{Binding Text}"
                                   Placeholder="Editează notița"
                                   FontSize="16"
                                   TextColor="#2196F3"/>
                            <Button Text="Salvează modificarea"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:UpdateNotesPage}}, Path=BindingContext.UpdateNoteCommand}"
                                    CommandParameter="{Binding .}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
