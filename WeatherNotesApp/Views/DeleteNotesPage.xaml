<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherNotesApp.Views.DeleteNotesPage"
             xmlns:local="clr-namespace:WeatherNotesApp.Views"
             Title="Ștergere Notițe">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Selectează o notiță pentru ștergere"
               FontAttributes="Bold"
               FontSize="20"
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Notes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5"
                           Padding="10"
                           BackgroundColor="#fff8f8"
                           BorderColor="#ffcccc"
                           CornerRadius="10">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Grid.Column="0"
                                   Grid.Row="0"
                                   Text="{Binding Text}"
                                   FontSize="16"
                                   TextColor="Black" />
                            <Label Grid.Column="0"
                                   Grid.Row="1"
                                   Text="{Binding Date, StringFormat='{0:dd.MM.yyyy HH:mm}'}"
                                   FontSize="12"
                                   TextColor="Gray" />
                            <Button Grid.Column="1"
                                    Grid.RowSpan="2"
                                    Text="Șterge"
                                    BackgroundColor="#E53935"
                                    TextColor="White"
                                    CornerRadius="8"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:DeleteNotesPage}}, Path=BindingContext.DeleteNoteCommand}"
                                    CommandParameter="{Binding .}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
